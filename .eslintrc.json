{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": "off",
        "no-underscore-dangle": "off",
        "indent": ["error", "tab", {"SwitchCase": 1}],
		"no-tabs": "off",
        "consistent-return": "off",
		"max-len": ["error", 120],
        "no-plusplus": "off",
        "comma-dangle": "off",
		"no-else-return": "off",
        "func-names": "off",
        "arrow-parens": "off"
		// "no-console": "off",
		// "radix": "off",
		// "prefer-destructuring": "off",
		// "prefer-arrow-callback": "off",
    }
}